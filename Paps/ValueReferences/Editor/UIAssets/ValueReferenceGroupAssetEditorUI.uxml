<ui:UXML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="True">
    <ui:VisualElement name="MainContainer">
        <ui:VisualElement name="Header" style="flex-grow: 1; height: 30px; background-color: rgb(46, 46, 46); flex-direction: row; padding-left: 5px; justify-content: space-between;">
            <ui:VisualElement name="LabelContainer" style="flex-grow: 1; justify-content: center;">
                <ui:Label text="Label" name="GroupNameLabel" style="color: rgb(219, 117, 117); font-size: 17.5px; -unity-text-align: middle-left; -unity-font-style: bold;"/>
                <ui:TextField name="RenameTextField" is-delayed="true" style="display: none;"/>
            </ui:VisualElement>
            <ui:VisualElement name="ButtonsContainer" style="flex-direction: row; justify-content: center; align-items: center;">
                <ui:Button name="RenameButton" tooltip="Rename group" style="justify-content: center; width: 30px; height: 25px;">
                    <Paps.UnityExtensions.Editor.IconImage icon="d_editicon.sml"/>
                </ui:Button>
                <ui:Button name="PingButton" tooltip="Ping group asset" style="width: 30px; height: 25px;">
                    <Paps.UnityExtensions.Editor.IconImage icon="d_Search Icon"/>
                </ui:Button>
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement name="PathFieldContainer" style="padding-top: 5px; padding-right: 5px; padding-bottom: 5px; padding-left: 5px;">
            <uie:PropertyField name="PathField"/>
        </ui:VisualElement>
        <ui:VisualElement name="DragAndDropArea" style="flex-grow: 1;">
            <ui:VisualElement name="ItemsContainer" style="flex-grow: 1; min-height: 25px; background-color: rgb(67, 67, 67);"/>
            <ui:VisualElement name="AddButtonContainer" style="height: 80px;">
                <ui:Button name="AddButton" tooltip="Click to add a new element or drag and drop existing ones" style="flex-grow: 1; align-items: center; justify-content: center;">
                    <Paps.UnityExtensions.Editor.IconImage icon="d_Toolbar Plus@2x" tint-color="rgb(134, 245, 10)" picking-mode="Ignore"/>
                    <ui:Label text="Add Item" picking-mode="Ignore" name="DragAndDropLabel" style="font-size: 16px;"/>
                </ui:Button>
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
